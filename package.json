{
    "scripts": {
        "test": "",
		"format": "lint-staged",
        "lint": "npx eslint ./ultimatePong/server/src ./ultimatePong/app/src",
        "lint:fix": "npm run lint -- --fix",
        "prettier": "npx prettier ./ultimatePong/server/src  ./ultimatePong/app/src --check",
        "prettier:fix": "npm run prettier -- --write",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "eslint": "^8.31.0",
        "eslint-plugin-react": "^7.31.11",
        "husky": "^8.0.0"
    },
	"lint-staged": {
        "./ultimatePong/*/**/*.{js,jsx,ts,tsx,json}": [
            "npm run lint --fix"
        ],
        "ultimatePong/*/**/*.{js,jsx,ts,tsx,json}": [
            "npm run prettier:fix --write"
        ]
    }
}
